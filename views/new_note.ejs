    <%- include('./partials/head.ejs'); %>



    <style>
        .accordion {
          background-color: rgb(255, 255, 255);
          color: #444;
          cursor: pointer;
          padding: 18px;
          width: 100%;
          border: none;
          text-align: left;
          outline: none;
          font-size: 15px;
          transition: 0.4s;
          text-align: center;
        }
        
        .active, .accordion:hover {
          background-color: #ccc; 
        }
        
        .panel {
          padding: 0 18px;
          display: none;
          background-color: white;
          overflow: hidden;
        }
        </style>


    <body style="font-family: Poppins;">

        <%- include('./partials/nav.ejs'); %>
        <a onclick="toggleSidebar()" class="toggle-nav medium material-icons" style="cursor: pointer;">menu</a>
        
<div class="form" id="dashboardContainer">
<div class="content">
  <h4 class="title">New Note </h4>
  <div class="card-base">
    <div class="dashboard-card-header">
      <h6>Download Template</h6>
      <div class="dashboard-button dashboard-success">
        Complete
      </div>
    </div>
  <a style="text-align: center;" target="_blank" href="https://docs.google.com/spreadsheets/d/1hOC-ADPe_Aiv_cGbYfBlVTSlyOaQMZzc/edit#gid=724155891">Download Template Here!</a>
  </div>
  <div class="card-base">
    <div class="dashboard-caption">
      <h6>Video Tutorial</h6>
      <div class="video">
        <iframe style="align-items: center;" width="100%" height="416" src="https://www.youtube.com/embed/iJ6rpgbnIRM" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      </div>

    <div class="btn-wrapper">
      <input type="submit" value="SKIP" class="submit-btn" />
      <input type="submit" value="Pending.." class="pending-box" />
    </div>
    </div>
  </div>
  <div class="card-base">
    <div class="dashboard-caption">
      <h6>Upload Template</h6>
    <% if (user.credits >= 5) { %>
    <form name="submit" action="./new_note" method="post" enctype="multipart/form-data" id="uploadForm" class="upload-file">
      <label class="text-label" for="name">Note Name</label>
      <input class="text-field" type="text" name="name" id="name" maxlength="31" required style="margin-bottom: 20px;"> <br>
      <input name="csv" type="file" required/>
      <!-- must remain in form -->
      <div class="btn-wrapper">
          <input type="submit" value="Upload" class="submit-btn" />
      </div>
      </form>
    <% } else { %>
      <!-- If not enough credits -->
      <form name="submit" action="/subscriptions" method="get" enctype="multipart/form-data" id="uploadForm" class="upload-file">
        <label class="text-label" for="name">Note Name</label>
        <input class="text-field" type="text" name="" id="name" maxlength="31" style="margin-bottom: 20px;" disabled> <br>
        <input name="" type="file" disabled/>
        <div class="btn-wrapper">
          <input type="submit" value="Insufficient credits" class="submit-btn" style="width: auto; background-color: #f24913;"/>
        </div>
      </form>
    <% } %>
      </div>
    </form>
    </div>
  
  </div>
