<html>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
     

    <%- include('./partials/head.ejs'); %>

<body style="font-family: Poppins;">

    <%- include('./partials/nav.ejs'); %>
    <a onclick="toggleSidebar()" class="toggle-nav medium material-icons" style="cursor: pointer;">menu</a>

<div class="form" id="dashboardContainer">
    <div class="content"> 
        <h4 class="title">Settings</h4> 
        <div class="content-data">
            <div class="field-wrapper">
                <form action="user/change_username" method="post">
                    <div class="field-container">
                        <label class="text-label" for = "text">Full Name</label>
                        <input class="text-field" type="text" value="<%- user.username %>" name="username">
                    </div>
                    <div class="field-container">
                        <label class="text-label" for ="text">Email</label>
                        <input class="text-field" type="email" value="<%- user.email %>" disabled>
                    </div>
                    <div class="field-container">
                        <label class="text-label" for ="text">Credits</label>
                        <input class="text-field" type="text" value="<%- user.credits %>" disabled>
                    </div>
                    <div class="field-container">
                        <label class="text-label" for ="text">Password</label>
                        <input class="text-field" type="password" value="jioasgnkmogani">
                        <br>
                        <div class="change-password">
                        <a href="forgot_password">Change Password</a>
                        </div>
                    </div>
                    <div class="field-container">
                        <label class="text-label" for ="text">Subscription</label>
                        <input class="text-field" type="text" value="<%- user.subscription %>" disabled>
                    </div>

                </div>
                <div class="" style="margin-bottom:40px ;">  
                    <div class="btn-child">
                        <button onclick="window.location.href='subscriptions'" class="save-settings-btn" style="width: auto; padding: 0px 20px;">Manage Subscription</button>
                    </div> 
                    <div class="btn-child">
                        <input type="submit" value="Save Settings" class="save-settings-btn" style="background-color: #21b499" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

</body>

    <%- include('./partials/footer.ejs'); %>

</html>