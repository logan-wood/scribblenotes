<html>
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
     

    <%- include('./partials/head.ejs'); %>

<body style="font-family: Poppins;">

    <%- include('./partials/nav.ejs'); %>


<div class="form" id="dashboardContainer">
    <div class="content"> 
        <h4 class="title">Settings</h4> 
        <div class="content-data">
            <div class="field-wrapper">
                <div class="field-container">
                    <label class="text-label" for = "text">Full Name</label>
                    <input class="text-field" type="text" value="<%- user.username %>">
                </div>
                <div class="field-container">
                    <label class="text-label" for ="text">Email</label>
                    <input class="text-field" type="email" value="<%- user.email %>">
                </div>
                <div class="field-container">
                    <label class="text-label" for ="text">Credits</label>
                    <input class="text-field" type="number" value="<%- user.credits %>">
                </div>
                <div class="field-container">
                    <label class="text-label" for ="text">Password</label>
                    <input class="text-field" type="password" value="<%- user.credits %>">
                    <br>
                    <div class="change-password">
                    <a href="forgot_password">Change Password</a>
                    </div>
                </div>

            </div>
            <div class="" style="margin-bottom:40px ;">  
                <div class="btn-child">
                    <button onclick="window.location.href='#'" class="save-settings-btn">Save Settings</button>
                </div> 
                <div class="btn-child">
                    <button onclick="window.location.href='#'" class="close-account-btn">Close Account</button>
                </div> 
            </div>
            <a href="subscriptions" >Manage Subscription</a>
        </div>
    </div>
</div>

</body>

    <%- include('./partials/footer.ejs'); %>

</html>